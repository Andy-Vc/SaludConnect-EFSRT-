@model IEnumerable<Web.Models.DTO.ServiceDTO>

@{
    ViewData["Title"] = "Gestión de Servicios";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4 mb-3 fw-bold">Listado de Servicios</h1>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle-fill"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="bi bi-exclamation-triangle-fill"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Nuevo Servicio
        </a>
    </div>

    <div class="card shadow-sm rounded-3">
        <div class="card-body table-responsive">
            <table class="table table-bordered table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Id</th>
                        <th>Nombre del Servicio</th>
                        <th>Descripción</th>
                        <th>Precio</th>
                        <th>Duración (min)</th>
                        <th>Especialidad</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var service in Model)
                        {
                            <tr>
                                <td>@service.IdService</td>
                                <td>@service.NameService</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(service.Description))
                                    {
                                        @(service.Description.Length > 50
                                            ? service.Description.Substring(0, 50) + "..."
                                            : service.Description)
                                    }
                                    else
                                    {
                                        <span class="text-muted">Sin descripción</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-success">S/. @service.Price.ToString("N2")</span>
                                </td>
                                <td>
                                    <span class="badge bg-info text-dark">@service.DurationMinutes min</span>
                                </td>
                                <td>@service.NameSpecialty</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@service.IdService"
                                       class="btn btn-sm btn-warning me-1"
                                       title="Editar">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    
                                    <form asp-action="Delete" asp-route-id="@service.IdService"
                                          method="post"
                                          style="display:inline;"
                                          onsubmit="return confirm('¿Está seguro de eliminar este servicio?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-danger" title="Eliminar">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center">
                                <div class="alert alert-info mb-0">
                                    <i class="bi bi-info-circle"></i> No hay servicios registrados
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="mt-3">
            <p class="text-muted">
                <i class="bi bi-list-check"></i> Total de servicios: <strong>@Model.Count()</strong>
            </p>
        </div>
    }
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

@section Styles {
    <style>
        .form-label {
            color: #333;
        }

        .btn-success {
            background-color: #28a745;
        }

        .table td {
            vertical-align: middle;
        }

        .badge {
            font-size: 0.85rem;
            padding: 0.4em 0.6em;
        }

        .btn-sm {
            padding: 0.25rem 0.5rem;
        }

        .alert {
            border-radius: 0.5rem;
        }
    </style>
}
