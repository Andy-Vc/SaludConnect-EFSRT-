@using Web.Models

@{
    ViewData["Title"] = "Detalles de la Cita";
    Layout = "~/Views/Shared/_LayoutPatient.cshtml";
}

<!-- Main Content -->
<main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Breadcrumb Navigation -->
    <nav class="flex mb-8" aria-label="Breadcrumb">
        <ol class="flex items-center space-x-4">
            <li>
                <div>
                    <a asp-controller="Patient" asp-action="Index" class="text-text-secondary hover:text-primary transition-smooth">
                        <svg class="flex-shrink-0 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                            <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path>
                        </svg>
                        <span class="sr-only">Inicio</span>
                    </a>
                </div>
            </li>
            <li>
                <div class="flex items-center">
                    <svg class="flex-shrink-0 h-5 w-5 text-text-secondary" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                    </svg>
                    <a asp-controller="Patient" asp-action="Record" class="ml-4 text-sm font-medium text-text-secondary hover:text-primary transition-smooth">
                        Historial de Citas
                    </a>
                </div>
            </li>
            <li>
                <div class="flex items-center">
                    <svg class="flex-shrink-0 h-5 w-5 text-text-secondary" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                    </svg>
                    <span class="ml-4 text-sm font-medium text-primary">Detalles de la Cita</span>
                </div>
            </li>
        </ol>
    </nav>

    <!-- Page Header -->
    <div class="mb-8">
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-3xl font-semibold text-text-primary">Detalles de la Cita</h1>
                <p class="text-text-secondary mt-2">Información completa y opciones de gestión</p>
            </div>
            <!-- Status Badge -->
            <div class="flex items-center">
                @{
                    string estadoTexto = "";
                    string estadoClase = "";
                    string estadoIcono = "";

                    switch (Model.State?.ToUpper())
                    {
                        case "P":
                            estadoTexto = "Pendiente";
                            estadoClase = "text-yellow-600";
                            estadoIcono = "⏳";
                            break;
                        case "A":
                            estadoTexto = "Asistida";
                            estadoClase = "text-green-600";
                            estadoIcono = "✅";
                            break;
                        case "X":
                            estadoTexto = "Cancelada";
                            estadoClase = "text-red-600";
                            estadoIcono = "❌";
                            break;
                        case "N":
                            estadoTexto = "No asistió";
                            estadoClase = "text-gray-600";
                            estadoIcono = "⏸️";
                            break;
                        default:
                            estadoTexto = "Desconocido";
                            estadoClase = "text-gray-600";
                            estadoIcono = "❓";
                            break;
                    }
                }

                <!-- Status Badge -->
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-accent-50 text-accent @estadoClase">
                    <span class="mr-2">@estadoIcono</span>
                    @estadoTexto
                </span>
            </div>
        </div>
    </div>

    <!-- Main Content Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Left Column - Main Details -->
        <div class="lg:col-span-2 space-y-6">
            <!-- Appointment Overview Card -->
            <div class="card">
                <div class="flex items-start justify-between mb-6">
                    <div>
                        <h2 class="text-xl font-semibold text-text-primary mb-2">Información de la Cita</h2>
                        <p class="text-text-secondary">Consulta de @Model.Specialty.NameSpecialty </p>
                    </div>
                    <div class="text-right">
                        <p class="text-sm text-text-secondary">ID de Cita</p>
                        <p class="font-mono text-sm text-text-primary">#APT-2025-00-@Model.IdAppointment</p>
                    </div>
                </div>

                <!-- Date and Time -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                    <div class="flex items-center">
                        <div class="w-12 h-12 bg-primary-50 rounded-lg flex items-center justify-center mr-4">
                            <svg class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                            </svg>
                        </div>
                        <div>
                            <p class="text-sm text-text-secondary">Fecha</p>
                            <p class="text-lg font-semibold text-text-primary">@Model.DateAppointment.ToString("dd/MM/yyyy")</p>
                        </div>
                    </div>
                    <div class="flex items-center">
                        <div class="w-12 h-12 bg-accent-50 rounded-lg flex items-center justify-center mr-4">
                            <svg class="w-6 h-6 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                        </div>
                        <div>
                            <p class="text-sm text-text-secondary">Hora</p>
                            <p class="text-lg font-semibold text-text-primary">
                                @Model.DateAppointment.ToString("hh:mm")
                                @(Model.DateAppointment.Hour < 12 ? "A.M." : "P.M.")
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Location -->
                <div class="flex items-start mb-6">
                    <div class="w-12 h-12 bg-secondary-100 rounded-lg flex items-center justify-center mr-4 flex-shrink-0">
                        <svg class="w-6 h-6 text-secondary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        </svg>
                    </div>
                    <div class="flex-1">
                        <p class="text-sm text-text-secondary">Ubicación</p>
                        <p class="text-lg font-semibold text-text-primary">Consultorio N°@Model.consultory.numberConsultories en el piso número @Model.consultory.floorNumber</p>
                        <p class="text-sm text-text-secondary mt-1">Ciudad de México, CDMX, México</p>
                        <button class="text-primary text-sm font-medium mt-2 hover:text-primary-700 transition-smooth">
                            Ver en mapa →
                        </button>
                    </div>
                </div>

                <!-- Preparation Instructions -->
                <div class="bg-primary-50 rounded-lg p-4">
                    <h3 class="text-sm font-semibold text-text-primary mb-2 flex items-center">
                        <svg class="w-4 h-4 mr-2 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        Instrucciones de Preparación
                    </h3>
                    <ul class="text-sm text-text-secondary space-y-1">
                        <li>• Traer historial médico reciente</li>
                        <li>• Lista de medicamentos actuales</li>
                        <li>• Llegar 15 minutos antes de la cita</li>
                        <li>• Traer documento de identidad</li>
                    </ul>
                </div>
            </div>

            <!-- Doctor Information Card -->
            <div class="card">
                <h2 class="text-xl font-semibold text-text-primary mb-6">Información del Doctor</h2>

                <div class="flex items-start space-x-4">
                    <!-- Doctor Icon to Implement in future -->
                    <div class="flex-shrink-0">

                    </div>

                    <!-- Doctor Details -->
                    <div class="flex-1">
                        <h3 class="text-lg font-semibold text-text-primary">Dr. @Model.Doctor.FirstName</h3>
                        <p class="text-text-secondary mb-2">Especialista en @Model.Specialty.NameSpecialty</p>

                        <!-- Credentials -->
                        <div class="space-y-2 mb-4">
                            <div class="flex items-center text-sm text-text-secondary">
                                <span class="text-lg mr-2 mb-4">🎓</span>
                                    <div id="doctor-info-colegiado" class="space-y-2 mb-4">
                                    </div>
                            </div>
                            <div class="flex items-center text-sm text-text-secondary">
                                <span class="text-lg mr-2 mb-4">💼</span>
                                <div id="doctor-info-logros" class="space-y-2 mb-4">
                                </div>
                            </div>
                        </div>

                        <!-- Contact Information -->
                        <div class="flex flex-wrap gap-4">
                            <button class="flex items-center text-sm text-primary font-medium hover:text-primary-700 transition-smooth">
                                <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                                </svg>
                                Contactar
                            </button>
                            <button class="flex items-center text-sm text-primary font-medium hover:text-primary-700 transition-smooth">
                                <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                </svg>
                                Ver perfil completo
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Column - Actions and Additional Info -->
        <div class="space-y-6">
            <!-- Action Buttons Card -->
            <div class="card">
                <h3 class="text-lg font-semibold text-text-primary mb-4">Acciones</h3>

                <div class="space-y-3">
                    <!-- Reschedule Button -->
                    <button class="w-full btn-primary flex items-center justify-center" onclick="rescheduleAppointment()">
                        <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                        Reprogramar Cita
                    </button>

                    <!-- Cancel Button -->
                    <button class="w-full bg-error text-white px-6 py-3 rounded-lg font-medium transition-smooth hover:bg-red-700 active-scale flex items-center justify-center" onclick="cancelAppointment()">
                        <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                        Cancelar Cita
                    </button>

                    <!-- Add to Calendar -->
                    <button class="w-full btn-secondary flex items-center justify-center">
                        <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                        </svg>
                        Añadir al Calendario
                    </button>
                </div>
            </div>

            <!-- Quick Info Card -->
            <div class="card">
                <h3 class="text-lg font-semibold text-text-primary mb-4">Información Rápida</h3>

                <div class="space-y-4">
                    <!-- Duration -->
                    <div class="flex items-center justify-between">
                        <span class="text-sm text-text-secondary">Duración estimada</span>
                        <span class="text-sm font-medium text-text-primary">20-30 minutos</span>
                    </div>

                    <!-- Cost -->
                    <div class="flex items-center justify-between">
                        <span class="text-sm text-text-secondary">Coste</span>
                        <span class="text-sm font-medium text-text-primary">MXN 20,00</span>
                    </div>

                    <!-- Insurance -->
                    <div class="flex items-center justify-between">
                        <span class="text-sm text-text-secondary">Seguro</span>
                        <span class="text-sm font-medium text-accent">Cubierto</span>
                    </div>

                    <!-- Reminder -->
                    <div class="flex items-center justify-between">
                        <span class="text-sm text-text-secondary">Recordatorio</span>
                        <span class="text-sm font-medium text-text-primary">1 hora antes</span>
                    </div>
                </div>
            </div>

            <!-- Emergency Contact Card Mejorado -->
            <div class="card bg-error-50 border-error-200 p-6">
                <h3 class="text-lg font-semibold text-error mb-3 flex items-center">
                    <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                    </svg>
                    Contacto de Emergencia
                </h3>
                <p class="text-sm text-error mb-4 leading-relaxed">Si necesitas cancelar con menos de 24h de antelación</p>
                <button class="text-error font-medium text-sm hover:text-red-700 transition-smooth py-2 px-4 bg-white rounded-lg border border-error-200 hover:bg-error-100">
                    📞 +52 55 2789 2000
                </button>
            </div>
        </div>
    </div>

    <!-- DEBUG TEMPORAL - Agrega esto en tu vista -->
    <div class="fixed bottom-4 left-4 bg-yellow-100 p-4 rounded-lg z-50">
        <p class="text-sm font-mono">ID de cita: @Model.IdAppointment</p>
        <p class="text-sm font-mono">Estado: @Model.State</p>
    </div>
    @Html.AntiForgeryToken()
</main>

<!-- Confirmation Modals -->
<div id="reschedule-modal" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden flex items-center justify-center p-4">
    <div class="bg-surface rounded-xl p-6 max-w-md w-full">
        <h3 class="text-lg font-semibold text-text-primary mb-4">Reprogramar Cita</h3>
        <p class="text-text-secondary mb-6">¿Estás seguro de que deseas reprogramar esta cita? Serás redirigido al calendario para seleccionar una nueva fecha.</p>
        <div class="flex space-x-3">
            <button class="flex-1 btn-secondary" onclick="closeModal('reschedule-modal')">Cancelar</button>
            <button class="flex-1 btn-primary" onclick="confirmReschedule()">Continuar</button>
        </div>
    </div>
</div>

<div id="cancel-modal" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden flex items-center justify-center p-4">
    <div class="bg-surface rounded-xl p-6 max-w-md w-full">
        <h3 class="text-lg font-semibold text-text-primary mb-4">Cancelar Cita</h3>
        <p class="text-text-secondary mb-6">¿Estás seguro de que deseas cancelar esta cita? Esta acción no se puede deshacer.</p>
        <div class="flex space-x-3">
            <button class="flex-1 btn-secondary" onclick="closeModal('cancel-modal')">No, mantener cita</button>
            <button class="flex-1 bg-error text-white px-6 py-3 rounded-lg font-medium transition-smooth hover:bg-red-700" onclick="confirmCancel()">Sí, cancelar</button>
        </div>
    </div>
</div>



@section Scripts {
    <script>
        // Mover showToast al inicio
        function showToast(message, type = 'info') {
            const toast = document.createElement('div');

            // Configuración por tipo
            let config = {
                bgColor: 'bg-blue-500',
                textColor: 'text-white',
                icon: 'ℹ️',
                borderColor: 'border-blue-600'
            };

            switch (type) {
                case 'success':
                    config = {
                        bgColor: 'bg-green-500',
                        textColor: 'text-white',
                        icon: '✅',
                        borderColor: 'border-green-600'
                    };
                    break;
                case 'error':
                    config = {
                        bgColor: 'bg-red-500',
                        textColor: 'text-white',
                        icon: '❌',
                        borderColor: 'border-red-600'
                    };
                    break;
                case 'info':
                    config = {
                        bgColor: 'bg-blue-500',
                        textColor: 'text-white',
                        icon: 'ℹ️',
                        borderColor: 'border-blue-600'
                    };
                    break;
            }

            toast.className = `fixed top-6 right-6 z-50 p-4 rounded-xl shadow-2xl border-l-4 ${config.bgColor} ${config.textColor} ${config.borderColor} transform transition-all duration-300 translate-x-full`;

            toast.innerHTML = `
                <div class="flex items-center space-x-3">
                    <span class="text-xl">${config.icon}</span>
                    <div class="flex-1">
                        <p class="font-semibold">${type === 'success' ? '¡Éxito!' : type === 'error' ? 'Error' : 'Información'}</p>
                        <p class="text-sm opacity-90">${message}</p>
                    </div>
                    <button onclick="this.parentElement.parentElement.remove()" class="text-lg hover:opacity-70 transition-opacity">
                        ×
                    </button>
                </div>
            `;

            document.body.appendChild(toast);

            // Animación de entrada
            setTimeout(() => {
                toast.classList.remove('translate-x-full');
                toast.classList.add('translate-x-0');
            }, 10);

            // Auto-remover después de 4 segundos
            setTimeout(() => {
                if (toast.parentElement) {
                    toast.classList.add('translate-x-full');
                    toast.classList.remove('translate-x-0');
                    setTimeout(() => {
                        if (toast.parentElement) {
                            toast.remove();
                        }
                    }, 300);
                }
            }, 4000);
        }

        document.addEventListener('DOMContentLoaded', function() {
            const colegiados = [
                "Colegiado Nº " + (Math.floor(Math.random() * 90000) + 10000),
                "Registro profesional " + (Math.floor(Math.random() * 20000) + 5000),
                "Licencia médica " + (Math.floor(Math.random() * 4000) + 1000),
                "Matrícula " + (Math.floor(Math.random() * 80000) + 20000),
                "Certificado Nº " + (Math.floor(Math.random() * 50000) + 10000)
            ];

            const logros = [
                "Más de " + (Math.floor(Math.random() * 4000) + 1000) + " procedimientos exitosos",
                "Publicaciones en " + (Math.floor(Math.random() * 12) + 3) + " revistas médicas",
                "Miembro de " + (Math.floor(Math.random() * 4) + 2) + " sociedades médicas",
                "Ponente en " + (Math.floor(Math.random() * 15) + 5) + " congresos internacionales",
                (Math.floor(Math.random() * 95) + 95) + "% de satisfacción en pacientes",
                "Líder en " + (Math.floor(Math.random() * 8) + 1) + " investigaciones clínicas",
                "Reconocido por " + (Math.floor(Math.random() * 10) + 5) + " años de excelencia"
            ];

            // Colegiado
            const doctorInfoColegiado = document.getElementById('doctor-info-colegiado');
            if (doctorInfoColegiado) {
                doctorInfoColegiado.textContent = colegiados[Math.floor(Math.random() * colegiados.length)];
            }

            // Logros
            const doctorInfoLogros = document.getElementById('doctor-info-logros');
            if (doctorInfoLogros) {
                doctorInfoLogros.textContent = logros[Math.floor(Math.random() * logros.length)];
            }
        });

        function rescheduleAppointment() {
            document.getElementById('reschedule-modal').classList.remove('hidden');
        }

        function cancelAppointment() {
            document.getElementById('cancel-modal').classList.remove('hidden');
        }

        function closeModal(modalId) {
            document.getElementById(modalId).classList.add('hidden');
        }

        function confirmReschedule() {
            closeModal('reschedule-modal');
            window.location.href = '@Url.Action("Booking", "Patient")';
        }

        async function confirmCancel() {
            closeModal('cancel-modal');

            try {
                showToast('Cancelando cita...', 'info');

                console.log('ID de cita a cancelar:', @Model.IdAppointment);

                const formData = new FormData();
                formData.append('id', @Model.IdAppointment);

                const response = await fetch('@Url.Action("CancelAppointment", "Patient")', {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: formData
                });

                console.log('Response status:', response.status);

                const result = await response.json();
                console.log('Resultado:', result);

                if (result.success) {
                    showToast(result.message, 'success');
                    setTimeout(() => {
                        if (result.redirectUrl) {
                            window.location.href = result.redirectUrl;
                        } else {
                            window.location.href = '@Url.Action("Record", "Patient")';
                        }
                    }, 2000);
                } else {
                    showToast(result.message, 'error');
                }

            } catch (error) {
                console.error('Error cancelando cita:', error);
                showToast('Error al cancelar la cita: ' + error.message, 'error');
            }
        }

        document.addEventListener('click', function(event) {
            const rescheduleModal = document.getElementById('reschedule-modal');
            const cancelModal = document.getElementById('cancel-modal');

            if (event.target === rescheduleModal) {
                closeModal('reschedule-modal');
            }
            if (event.target === cancelModal) {
                closeModal('cancel-modal');
            }
        });
    </script>
}