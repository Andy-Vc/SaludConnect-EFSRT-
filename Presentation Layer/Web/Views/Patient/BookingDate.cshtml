@model Web.Models.ViewModels.PatientWM.BookingDateViewModel

@{
    ViewData["Title"] = "Seleccionar Fecha y Hora";
    Layout = "~/Views/Shared/_LayoutPatient.cshtml";
}

<style>
    /* MEJORAS PARA EL CALENDARIO */
    .calendar-container {
        width: 100%;
        max-width: 800px;
        margin: 0 auto;
    }

    .calendar-grid {
        display: grid;
        grid-template-columns: repeat(7, 1fr);
        gap: 0.5rem;
        width: 100%;
    }

    .calendar-day {
        min-height: 3.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        border-radius: 0.75rem;
        transition: all 0.3s ease;
        font-weight: 500;
        font-size: 0.95rem;
        position: relative;
        border: 2px solid transparent;
        background-color: white;
    }

        /* Estados del día */
        .calendar-day.available {
            background-color: #eff6ff;
            border-color: #3b82f6;
            color: #1e40af;
            box-shadow: 0 2px 4px rgba(59, 130, 246, 0.1);
        }

            .calendar-day.available:hover {
                background-color: #3b82f6;
                color: white;
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(59, 130, 246, 0.3);
            }

        .calendar-day.selected {
            background-color: #3b82f6;
            color: white;
            font-weight: 600;
            transform: scale(1.05);
            box-shadow: 0 4px 12px rgba(59, 130, 246, 0.4);
        }

        .calendar-day.unavailable {
            background-color: #f8fafc;
            color: #cbd5e1;
            cursor: not-allowed;
            border-color: #e2e8f0;
        }

        .calendar-day.other-month {
            color: #94a3b8;
            background-color: #f1f5f9;
        }

        .calendar-day.past {
            background-color: #f8fafc;
            color: #cbd5e1;
            cursor: not-allowed;
            border-color: #e2e8f0;
        }

    /* Días de la semana */
    .week-day {
        text-align: center;
        font-weight: 600;
        color: #475569;
        font-size: 0.875rem;
        padding: 0.75rem 0;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    /* Header del calendario */
    .calendar-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
        padding: 1rem;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 1rem;
        color: white;
    }

    .calendar-nav-btn {
        background: rgba(255, 255, 255, 0.2);
        border: none;
        border-radius: 50%;
        width: 2.5rem;
        height: 2.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.3s ease;
        color: white;
    }

        .calendar-nav-btn:hover {
            background: rgba(255, 255, 255, 0.3);
            transform: scale(1.1);
        }

    .current-month {
        font-size: 1.25rem;
        font-weight: 600;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .calendar-grid {
            gap: 0.25rem;
        }

        .calendar-day {
            min-height: 2.5rem;
            font-size: 0.8rem;
            border-radius: 0.5rem;
        }

        .week-day {
            font-size: 0.75rem;
            padding: 0.5rem 0;
        }

        .calendar-header {
            flex-direction: column;
            gap: 1rem;
            text-align: center;
        }
    }

    @@media (max-width: 480px) {
        .calendar-day {
            min-height: 2rem;
            font-size: 0.75rem;
        }
    }

    /* Mantener estilos existentes para time-slots */
    .time-slot {
        padding: 0.75rem;
        border: 2px solid #e5e7eb;
        border-radius: 0.5rem;
        cursor: pointer;
        transition: all 0.2s;
        text-align: center;
        background-color: white;
    }

        .time-slot.available:hover {
            border-color: #3b82f6;
            background-color: #dbeafe;
            transform: translateY(-1px);
        }

        .time-slot.selected {
            background-color: #3b82f6;
            color: white;
            border-color: #3b82f6;
            transform: scale(1.05);
        }

        .time-slot.occupied {
            background-color: #fee2e2;
            border-color: #fca5a5;
            color: #991b1b;
            cursor: not-allowed;
            opacity: 0.6;
        }

    /* Estilos para cards */
    .card {
        background: white;
        border-radius: 1rem;
        padding: 1.5rem;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
        border: 1px solid #e5e7eb;
    }

    /* Botones */
    .btn-primary {
        background-color: #3b82f6;
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: 0.5rem;
        font-weight: 600;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
    }

        .btn-primary:hover:not(:disabled) {
            background-color: #2563eb;
            transform: translateY(-1px);
        }

    .btn-secondary {
        background-color: #6b7280;
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: 0.5rem;
        font-weight: 600;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
    }

        .btn-secondary:hover {
            background-color: #4b5563;
        }


    .booking-legend {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        justify-content: center;
        gap: 1.5rem;
        margin-top: 1.5rem;
        padding-top: 1.5rem;
    }

    .booking-legend-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 0.75rem;
        background: white;
        border-radius: 0.5rem;
        border: 1px solid #e5e7eb;
        box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
    }

    .booking-legend-indicator {
        width: 1rem;
        height: 1rem;
        border-radius: 0.25rem;
        border: 2px solid;
    }

    .booking-legend-indicator--selected {
        background-color: #3b82f6;
        border-color: #2563eb;
    }

    .booking-legend-indicator--available {
        background-color: #eff6ff;
        border-color: #3b82f6;
    }

    .booking-legend-indicator--unavailable {
        background-color: #f8fafc;
        border-color: #e2e8f0;
    }

    .booking-legend-text {
        font-size: 0.875rem;
        font-weight: 500;
        color: #374151;
    }
</style>

