    var pathDefault = "M21.5 5.5l-2-2C18.9 3.1 18.1 3 17.5 3c-.7 0-1.5.3-2 .8L5 14.8c-.8.8-.8 2 0 2.8l2 2c.4.4 1 .6 1.4.6.7 0 1.5-.3 2-.8l10.5-10.5c.5-.5.8-1.3.8-2zM8 17.5c-.3 0-.5-.1-.7-.3l-2-2c-.4-.4-.4-1 0-1.4l1.1-1.1L12.5 16l-1.1 1.1c-.2.2-.4.3-.7.3z";
}


@if (Model != null && Model.Count > 0)
{
    @foreach (var specialty in Model)
    {
        string currentPath = pathDefault;
        string bgColorClass = "bg-default";
        string textColorClass = "text-default";

        @switch (specialty.NameSpecialty)
        {
            case "Cardiología":
                currentPath = pathCardio;
                bgColorClass = "bg-cardio";
                textColorClass = "text-cardio";
                break;
            case "Pediatría":
                currentPath = pathPediatria;
                bgColorClass = "bg-pediatria";
                textColorClass = "text-pediatria";
                break;
            case "Dermatología":
                currentPath = pathDerm;
                bgColorClass = "bg-derm";
                textColorClass = "text-derm";
                break;
            case "Medicina Interna":
                currentPath = pathInterna;
                bgColorClass = "bg-interna";
                textColorClass = "text-interna";
                break;
            case "Neurología":
                currentPath = pathNeuro;
                bgColorClass = "bg-neuro";
                textColorClass = "text-neuro";
                break;
            case "Oftalmología":
                currentPath = pathOftal;
                bgColorClass = "bg-oftal";
                textColorClass = "text-oftal";
                break;
            case "Ortopedia":
                currentPath = pathOrto;
                bgColorClass = "bg-orto";
                textColorClass = "text-orto";
                break;
            case "Psiquiatría":
                currentPath = pathPsic;
                bgColorClass = "bg-psic";
                textColorClass = "text-psic";
                break;
            default:
                currentPath = pathDefault;
                bgColorClass = "bg-default";
                textColorClass = "text-default";
                break;
        }

        <div class="card hover:shadow-floating transition-smooth cursor-pointer specialty-card"
             data-id="@specialty.IdSpecialty"
             data-name="@specialty.NameSpecialty.ToLower().Replace(" ", "-")">

            <div class="flex items-center mb-4">
                <div class="w-12 h-12 @bgColorClass rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 @textColorClass" fill="currentColor" viewBox="0 0 24 24">
                        <path d="@currentPath" />
                    </svg>
                </div>

                <div class="ml-4 flex-1">
                    <h3 class="text-lg font-semibold text-text-primary">@specialty.NameSpecialty</h3>
                    <p class="text-sm text-text-secondary"> @specialty.DoctorCount Doctores disponibles </p>
                </div>
            </div>
            <p class="text-sm text-text-secondary mb-4">
                @specialty.Description
            </p>
            <div class="flex items-center justify-between">
                <span class="text-xs text-accent font-medium bg-accent-50 px-2 py-1 rounded-full">Disponible</span>
                <svg class="w-5 h-5 text-text-secondary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
            </div>
        </div>
    }
}
else
{
    <div class="col-span-full">
        <div class="text-center py-12">
            <svg class="mx-auto h-12 w-12 text-text-secondary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 12h6m-6-4h6m2 5.291A7.962 7.962 0 0112 15c-2.34 0-4.29-1.009-5.824-2.562M15 9.75a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <h3 class="mt-2 text-sm font-medium text-text-primary">No se encontraron especialidades</h3>
            <p class="mt-1 text-sm text-text-secondary">Intenta con otros términos de búsqueda.</p>
        </div>
    </div>
}