    var pathOrto = "M13.5 10c0-1.07-.37-2.05-.99-2.82l-3.32-3.87c-1.35-1.57-3.51-2.09-5.4-1.37-1.4.52-2.3 1.83-2.3 3.32 0 1.12.55 2.15 1.48 2.82L6 12l-1.63 1.87c-.93.87-1.47 1.9-1.47 3.03 0 1.49.9 2.8 2.3 3.32 1.89.72 4.05.2 5.4-1.37l3.32-3.87c.62-.77.99-1.75.99-2.82zm2.06 1.18c.84-.5 1.44-1.38 1.55-2.37.17-1.42-.71-2.78-2.02-3.23-.9-.3-1.92-.28-2.8.04l-2.03 2.36C10.05 9.07 11 10.45 11 12s-1 2.93-1.87 3.65l2.03 2.36c.88.32 1.9.34 2.8.04 1.31-.45 2.19-1.81 2.02-3.23-.11-.99-.71-1.87-1.55-2.37z";
