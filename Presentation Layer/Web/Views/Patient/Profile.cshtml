							<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
								<div>
									<label class="form-label">Nombre del Contacto</label>
									<input type="text" name="Emergency.namesContact" class="form-input bg-secondary-50" value="@Model.namesContact">
								</div>
								<div>
									<label class="form-label">Apellido Paterno</label>
									<input type="text" name="Emergency.lastNamePat" class="form-input bg-secondary-50" value="@Model.lastNamePatContact">
								</div>
								<div>
									<label class="form-label">Apellido Materno</label>
									<input type="text" name="Emergency.lastNameMat" class="form-input bg-secondary-50" value="@Model.lastNameMatContact">
								</div>
								<div>
									<label class="form-label">Relación</label>
									<select name="Emergency.relationShip.idRelationship" id="relationshipSelect" class="form-input bg-secondary-50">
										<option value="">Seleccionar una relacion</option>

										@foreach (var rel in ViewBag.ListRelations as List<RelationShip>)
										{
											if (rel.idRelationShip == Model.idRelationShip)
											{
												<option value="@rel.idRelationShip" selected>
													@rel.descriptionRelationShip
												</option>
											}
											else
											{
												<option value="@rel.idRelationShip">
													@rel.descriptionRelationShip
												</option>
											}
										}
										}
									</select>
								</div>
								<div>
									<label class="form-label">Teléfono de Emergencia</label>
									<input type="tel" name="Emergency.phoneEmergency" class="form-input bg-secondary-50" value="@Model.phoneContactEmergency">
								</div>
							</div>
						</div>

						<div id="personalActions" class="flex space-x-4 pt-6 border-t border-secondary-200">
							<button type="submit" class="btn-primary">
								<i class="fas fa-save mr-2"></i>
								Guardar Cambios
							</button>
							<button type="button" class="btn-secondary" onclick="cancelEdit('personal')">
								<i class="fas fa-times mr-2"></i>
								Cancelar
							</button>
						</div>
					</form>
				</div>
