@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_LayoutPatient.cshtml";
}

<main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pb-8">
    <div class="mb-8">
        <div class="flex flex-col md:flex-row md:items-center md:justify-between">
            <div>
                <h2 class="text-2xl font-semibold text-text-primary mb-2">Mi Perfil</h2>
                <p class="text-text-secondary">Gestiona tu información personal y configuración de cuenta</p>
            </div>
            <div class="mt-4 md:mt-0">
                <div class="flex items-center space-x-2">
                    <div class="bg-success-50 px-3 py-1 rounded-full">
                        <span class="text-success text-sm font-medium">Perfil 85% completo</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
        <div class="lg:col-span-1">
            <div class="bg-surface rounded-lg shadow-md p-6 text-center">
                <div class="relative inline-block mb-4">
                    <img id="profilePhoto" src="https://images.unsplash.com/photo-1584824486509-112e4181ff6b?q=80&w=2940&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
                         alt="Foto de perfil"
                         class="w-32 h-32 rounded-full object-cover mx-auto border-4 border-primary-50"
                         onerror="this.src='https://images.unsplash.com/photo-1584824486509-112e4181ff6b?q=80&w=2940&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D'; this.onerror=null;">
                    <button class="absolute bottom-0 right-0 bg-primary text-white rounded-full p-2 shadow-md hover:bg-primary-700 transition-colors"
                            onclick="document.getElementById('photoInput').click()">
                        <i class="fas fa-camera text-sm"></i>
                    </button>
                    <input type="file" id="photoInput" class="hidden" accept="image/*" onchange="handlePhotoUpload(event)">
                </div>
                <h3 class="text-lg font-semibold text-text-primary mb-1">María García López</h3>
                <p class="text-text-secondary text-sm mb-4">Paciente desde Enero 2023</p>
                <div class="text-xs text-text-secondary">
                    <p class="mb-1">Tamaño máximo: 5MB</p>
                    <p>Formatos: JPG, PNG</p>
                </div>
            </div>

            <div class="bg-surface rounded-lg shadow-md p-6 mt-6">
                <h4 class="font-medium text-text-primary mb-4">Completar Perfil</h4>
                <div class="space-y-3">
                    <div class="flex items-center justify-between text-sm">
                        <span class="text-text-secondary">Información personal</span>
                        <span class="text-success font-medium">100%</span>
                    </div>
                    <div class="w-full bg-secondary-200 rounded-full h-2">
                        <div class="bg-success h-2 rounded-full" style="width: 100%"></div>
                    </div>

                    <div class="flex items-center justify-between text-sm">
                        <span class="text-text-secondary">Contacto de emergencia</span>
                        <span class="text-warning font-medium">75%</span>
                    </div>
                    <div class="w-full bg-secondary-200 rounded-full h-2">
                        <div class="bg-warning h-2 rounded-full" style="width: 75%"></div>
                    </div>

                    <div class="flex items-center justify-between text-sm">
                        <span class="text-text-secondary">Preferencias</span>
                        <span class="text-error font-medium">50%</span>
                    </div>
                    <div class="w-full bg-secondary-200 rounded-full h-2">
                        <div class="bg-error h-2 rounded-full" style="width: 50%"></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="lg:col-span-3">
            <div class="bg-surface rounded-lg shadow-md">
                <div class="border-b border-secondary-200">
                    <nav class="flex space-x-8 px-6" aria-label="Tabs">
                        <button class="tab-button py-4 px-1 border-b-2 font-medium text-sm transition-colors active border-primary text-primary"
                                onclick="switchTab('personal')" data-tab="personal">
                            <i class="fas fa-user mr-2"></i>
                            Información Personal
                        </button>
                        <button class="tab-button py-4 px-1 border-b-2 font-medium text-sm transition-colors border-transparent text-text-secondary hover:text-text-primary hover:border-secondary-300"
                                onclick="switchTab('contact')" data-tab="contact">
                            <i class="fas fa-envelope mr-2"></i>
                            Contacto
                        </button>
                        <button class="tab-button py-4 px-1 border-b-2 font-medium text-sm transition-colors border-transparent text-text-secondary hover:text-text-primary hover:border-secondary-300"
                                onclick="switchTab('account')" data-tab="account">
                            <i class="fas fa-cog mr-2"></i>
                            Configuración
                        </button>
                    </nav>
                </div>

                <div id="personalTab" class="tab-content p-6">
                    <div class="flex items-center justify-between mb-6">
                        <h3 class="text-lg font-semibold text-text-primary">Información Personal</h3>
                        <button id="editPersonalBtn" class="btn-secondary" onclick="toggleEdit('personal')">
                            <i class="fas fa-edit mr-2"></i>
                            Editar
                        </button>
                    </div>

                    <form id="personalForm" class="space-y-6">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                <label class="form-label">Nombre Completo *</label>
                                <input type="text" class="form-input" value="María García López" disabled id="fullName" required>
                                <div class="validation-message hidden text-error text-sm mt-1"></div>
                            </div>
                            <div>
                                <label class="form-label">Fecha de Nacimiento *</label>
                                <input type="date" class="form-input" value="1985-03-15" disabled id="birthDate" required>
                                <div class="validation-message hidden text-error text-sm mt-1"></div>
                            </div>
                            <div>
                                <label class="form-label">Género *</label>
                                <select class="form-input" disabled id="gender" required>
                                    <option value="">Seleccionar género</option>
                                    <option value="femenino" selected>Femenino</option>
                                    <option value="masculino">Masculino</option>
                                    <option value="otro">Otro</option>
                                    <option value="prefiero-no-decir">Prefiero no decir</option>
                                </select>
                                <div class="validation-message hidden text-error text-sm mt-1"></div>
                            </div>
                            <div>
                                <label class="form-label">Número de Identificación *</label>
                                <input type="text" class="form-input" value="12345678A" disabled id="idNumber" required>
                                <div class="validation-message hidden text-error text-sm mt-1"></div>
                            </div>
                        </div>

                        <div class="border-t border-secondary-200 pt-6">
                            <h4 class="font-medium text-text-primary mb-4">Contacto de Emergencia</h4>
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                <div>
                                    <label class="form-label">Nombre del Contacto</label>
                                    <input type="text" class="form-input" value="Carlos García" disabled id="emergencyName">
                                </div>
                                <div>
                                    <label class="form-label">Relación</label>
                                    <select class="form-input" disabled id="emergencyRelation">
                                        <option value="">Seleccionar relación</option>
                                        <option value="esposo" selected>Esposo</option>
                                        <option value="esposa">Esposa</option>
                                        <option value="padre">Padre</option>
                                        <option value="madre">Madre</option>
                                        <option value="hijo">Hijo/a</option>
                                        <option value="hermano">Hermano/a</option>
                                        <option value="otro">Otro</option>
                                    </select>
                                </div>
                                <div>
                                    <label class="form-label">Teléfono de Emergencia</label>
                                    <input type="tel" class="form-input" value="+34 654 321 987" disabled id="emergencyPhone">
                                </div>
                            </div>
                        </div>

                        <div id="personalActions" class="hidden flex space-x-4 pt-6 border-t border-secondary-200">
                            <button type="button" class="btn-primary" onclick="savePersonalInfo()">
                                <i class="fas fa-save mr-2"></i>
                                Guardar Cambios
                            </button>
                            <button type="button" class="btn-secondary" onclick="cancelEdit('personal')">
                                <i class="fas fa-times mr-2"></i>
                                Cancelar
                            </button>
                        </div>
                    </form>
                </div>

                <!-- Contact Information Tab -->
                <div id="contactTab" class="tab-content hidden p-6">
                    <div class="flex items-center justify-between mb-6">
                        <h3 class="text-lg font-semibold text-text-primary">Información de Contacto</h3>
                        <button id="editContactBtn" class="btn-secondary" onclick="toggleEdit('contact')">
                            <i class="fas fa-edit mr-2"></i>
                            Editar
                        </button>
                    </div>

                    <form id="contactForm" class="space-y-6">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                <label class="form-label">Correo Electrónico *</label>
                                <input type="email" class="form-input" value="maria.garcia@email.com" disabled id="email" required>
                                <div class="validation-message hidden text-error text-sm mt-1"></div>
                                <div class="flex items-center mt-2">
                                    <i class="fas fa-check-circle text-success mr-2"></i>
                                    <span class="text-success text-sm">Verificado</span>
                                </div>
                            </div>
                            <div>
                                <label class="form-label">Teléfono Móvil *</label>
                                <input type="tel" class="form-input" value="+34 612 345 678" disabled id="phone" required>
                                <div class="validation-message hidden text-error text-sm mt-1"></div>
                                <div class="flex items-center mt-2">
                                    <i class="fas fa-check-circle text-success mr-2"></i>
                                    <span class="text-success text-sm">Verificado</span>
                                </div>
                            </div>
                            <div class="md:col-span-2">
                                <label class="form-label">Dirección</label>
                                <input type="text" class="form-input" value="Calle Mayor 123, 28001 Madrid" disabled id="address">
                            </div>
                        </div>

                        <div class="border-t border-secondary-200 pt-6">
                            <h4 class="font-medium text-text-primary mb-4">Preferencias de Comunicación</h4>
                            <div class="space-y-4">
                                <div class="flex items-center">
                                    <input type="checkbox" id="emailNotifications" class="h-4 w-4 text-primary focus:ring-primary border-secondary-300 rounded" checked disabled>
                                    <label for="emailNotifications" class="ml-3 text-sm text-text-primary">
                                        Recibir notificaciones por correo electrónico
                                    </label>
                                </div>
                                <div class="flex items-center">
                                    <input type="checkbox" id="smsNotifications" class="h-4 w-4 text-primary focus:ring-primary border-secondary-300 rounded" checked disabled>
                                    <label for="smsNotifications" class="ml-3 text-sm text-text-primary">
                                        Recibir recordatorios por SMS
                                    </label>
                                </div>
                                <div class="flex items-center">
                                    <input type="checkbox" id="callReminders" class="h-4 w-4 text-primary focus:ring-primary border-secondary-300 rounded" disabled>
                                    <label for="callReminders" class="ml-3 text-sm text-text-primary">
                                        Recibir llamadas de recordatorio
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div id="contactActions" class="hidden flex space-x-4 pt-6 border-t border-secondary-200">
                            <button type="button" class="btn-primary" onclick="saveContactInfo()">
                                <i class="fas fa-save mr-2"></i>
                                Guardar Cambios
                            </button>
                            <button type="button" class="btn-secondary" onclick="cancelEdit('contact')">
                                <i class="fas fa-times mr-2"></i>
                                Cancelar
                            </button>
                        </div>
                    </form>
                </div>

                <!-- Account Settings Tab -->
                <div id="accountTab" class="tab-content hidden p-6">
                    <div class="flex items-center justify-between mb-6">
                        <h3 class="text-lg font-semibold text-text-primary">Configuración de Cuenta</h3>
                    </div>

                    <!-- Change Password Section -->
                    <div class="bg-secondary-50 rounded-lg p-6 mb-6">
                        <h4 class="font-medium text-text-primary mb-4">Cambiar Contraseña</h4>
                        <form id="passwordForm" class="space-y-4">
                            <div>
                                <label class="form-label">Contraseña Actual</label>
                                <input type="password" class="form-input" id="currentPassword" required>
                                <div class="validation-message hidden text-error text-sm mt-1"></div>
                            </div>
                            <div>
                                <label class="form-label">Nueva Contraseña</label>
                                <input type="password" class="form-input" id="newPassword" required>
                                <div class="validation-message hidden text-error text-sm mt-1"></div>
                                <div class="text-xs text-text-secondary mt-1">
                                    Mínimo 8 caracteres, incluir mayúsculas, minúsculas y números
                                </div>
                            </div>
                            <div>
                                <label class="form-label">Confirmar Nueva Contraseña</label>
                                <input type="password" class="form-input" id="confirmPassword" required>
                                <div class="validation-message hidden text-error text-sm mt-1"></div>
                            </div>
                            <button type="button" class="btn-primary" onclick="changePassword()">
                                <i class="fas fa-key mr-2"></i>
                                Cambiar Contraseña
                            </button>
                        </form>
                    </div>

                    <!-- Notifications Settings -->
                    <div class="bg-secondary-50 rounded-lg p-6 mb-6">
                        <h4 class="font-medium text-text-primary mb-4">Configuración de Notificaciones</h4>
                        <div class="space-y-4">
                            <div class="flex items-center justify-between">
                                <div>
                                    <h5 class="text-sm font-medium text-text-primary">Recordatorios de Citas</h5>
                                    <p class="text-xs text-text-secondary">Recibir recordatorios 24h y 1h antes de la cita</p>
                                </div>
                                <label class="relative inline-flex items-center cursor-pointer">
                                    <input type="checkbox" class="sr-only peer" checked>
                                    <div class="w-11 h-6 bg-secondary-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-primary-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-secondary-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-primary"></div>
                                </label>
                            </div>
                            <div class="flex items-center justify-between">
                                <div>
                                    <h5 class="text-sm font-medium text-text-primary">Confirmaciones de Citas</h5>
                                    <p class="text-xs text-text-secondary">Notificaciones cuando se confirme o cancele una cita</p>
                                </div>
                                <label class="relative inline-flex items-center cursor-pointer">
                                    <input type="checkbox" class="sr-only peer" checked>
                                    <div class="w-11 h-6 bg-secondary-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-primary-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-secondary-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-primary"></div>
                                </label>
                            </div>
                            <div class="flex items-center justify-between">
                                <div>
                                    <h5 class="text-sm font-medium text-text-primary">Promociones y Ofertas</h5>
                                    <p class="text-xs text-text-secondary">Recibir información sobre servicios y promociones</p>
                                </div>
                                <label class="relative inline-flex items-center cursor-pointer">
                                    <input type="checkbox" class="sr-only peer">
                                    <div class="w-11 h-6 bg-secondary-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-primary-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-secondary-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-primary"></div>
                                </label>
                            </div>
                        </div>
                    </div>

                    <!-- Privacy Settings -->
                    <div class="bg-secondary-50 rounded-lg p-6">
                        <h4 class="font-medium text-text-primary mb-4">Configuración de Privacidad</h4>
                        <div class="space-y-4">
                            <div class="flex items-center justify-between">
                                <div>
                                    <h5 class="text-sm font-medium text-text-primary">Compartir Datos con Especialistas</h5>
                                    <p class="text-xs text-text-secondary">Permitir que los médicos accedan a tu historial médico</p>
                                </div>
                                <label class="relative inline-flex items-center cursor-pointer">
                                    <input type="checkbox" class="sr-only peer" checked>
                                    <div class="w-11 h-6 bg-secondary-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-primary-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-secondary-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-primary"></div>
                                </label>
                            </div>
                            <div class="flex items-center justify-between">
                                <div>
                                    <h5 class="text-sm font-medium text-text-primary">Análisis de Uso</h5>
                                    <p class="text-xs text-text-secondary">Ayudar a mejorar la plataforma compartiendo datos de uso anónimos</p>
                                </div>
                                <label class="relative inline-flex items-center cursor-pointer">
                                    <input type="checkbox" class="sr-only peer" checked>
                                    <div class="w-11 h-6 bg-secondary-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-primary-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-secondary-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-primary"></div>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<!-- Success Toast Notification -->
<div id="successToast" class="fixed top-4 right-4 toast toast-success hidden z-50">
    <div class="flex items-center">
        <i class="fas fa-check-circle text-success mr-3"></i>
        <div>
            <p class="font-medium text-text-primary">¡Cambios guardados!</p>
            <p class="text-sm text-text-secondary">Tu información ha sido actualizada correctamente</p>
        </div>
    </div>
</div>

<!-- Error Toast Notification -->
<div id="errorToast" class="fixed top-4 right-4 toast toast-error hidden z-50">
    <div class="flex items-center">
        <i class="fas fa-exclamation-circle text-error mr-3"></i>
        <div>
            <p class="font-medium text-text-primary">Error al guardar</p>
            <p class="text-sm text-text-secondary">Por favor, revisa los campos e inténtalo de nuevo</p>
        </div>
    </div>
</div>

<!-- Help Center Button -->
<button class="fab" onclick="window.location.href='help_center.html'" title="Centro de Ayuda">
    <i class="fas fa-question text-lg"></i>
</button>