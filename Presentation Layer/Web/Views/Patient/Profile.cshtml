					<div class="bg-secondary-50 rounded-lg p-6 mb-6">
						<h4 class="font-medium text-text-primary mb-4">Cambiar Contraseña</h4>
						<form asp-action="ChangePassword" asp-controller="Patient" method="post" id="passwordForm" class="space-y-4">
							<input type="hidden" name="idUser" value="@Model.idUser" />

							<div>
								<label class="form-label">Contraseña Actual</label>
								<input type="password" name="currentPassword" class="form-input" id="currentPassword" required>
								<div class="validation-message hidden text-error text-sm mt-1"></div>
							</div>
							<div>
								<label class="form-label">Nueva Contraseña</label>
								<input type="password" name="newPassword" class="form-input" id="newPassword" required>
								<div class="validation-message hidden text-error text-sm mt-1"></div>
								<div class="text-xs text-text-secondary mt-1">
									Mínimo 8 caracteres, incluir mayúsculas, minúsculas y números
								</div>
							</div>
							<div>
								<label class="form-label">Confirmar Nueva Contraseña</label>
								<input type="password" name="confirmPassword" class="form-input" id="confirmPassword" required>
								<div class="validation-message hidden text-error text-sm mt-1"></div>
							</div>
							<button type="button" class="btn-primary" onclick="validateAndSubmitPassword()">
								<i class="fas fa-key mr-2"></i>
