								<input type="text" name="lastNameMat" class="form-input bg-secondary-50" value="@Model.lastNameMat" required>
							</div>
							<div>
								<label class="form-label">Número de Identificación *</label>
								<input type="text" name="document" class="form-input bg-secondary-50" value="@Model.document" required>
							</div>
							<div>
