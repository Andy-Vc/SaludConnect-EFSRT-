@model Web.Models.DTO.UpdateConsultoryDTO
@{
    ViewData["Title"] = "Editar Consultorio";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid px-4 py-4">

    <!-- Formulario -->
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-7">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-header bg-gradient-primary text-white py-3 rounded-top-4">
                    <h5 class="mb-0 fw-semibold">
                        <i class="bi bi-building me-2"></i>Editar Consultorio
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post" id="editConsultoryForm">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            Por favor, corrija los siguientes errores:
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>

                        <input type="hidden" asp-for="IdConsultories" />

                        <!-- Número de Consultorio -->
                        <div class="mb-4">
                            <label asp-for="NumberConsultories" class="form-label fw-semibold">
                                <i class="bi bi-door-closed text-primary me-1"></i>Número de Consultorio
                                <span class="text-danger">*</span>
                            </label>
                            <input asp-for="NumberConsultories" class="form-control form-control-lg" placeholder="Ej: C-101, Consultorio 1, etc." maxlength="10" />
                            <span asp-validation-for="NumberConsultories" class="text-danger small"></span>
                        </div>

                        <!-- Número de Piso -->
                        <div class="mb-4">
                            <label asp-for="FloorNumber" class="form-label fw-semibold">
                                <i class="bi bi-building-up text-info me-1"></i>Número de Piso
                                <span class="text-danger">*</span>
                            </label>
                            <select asp-for="FloorNumber" class="form-select">
                                <option value="">-- Seleccione el piso --</option>
                                <option value="1">Piso 1</option>
                                <option value="2">Piso 2</option>
                                <option value="3">Piso 3</option>
                                <option value="4">Piso 4</option>
                                <option value="5">Piso 5</option>
                                <option value="6">Piso 6</option>
                                <option value="7">Piso 7</option>
                                <option value="8">Piso 8</option>
                                <option value="9">Piso 9</option>
                                <option value="10">Piso 10</option>
                            </select>
                            <span asp-validation-for="FloorNumber" class="text-danger small"></span>
                        </div>

                        <!-- Especialidad -->
                        <div class="mb-4">
                            <label asp-for="IdSpecialty" class="form-label fw-semibold">
                                <i class="bi bi-clipboard2-pulse text-danger me-1"></i>Especialidad
                                <span class="text-danger">*</span>
                            </label>
                            <select asp-for="IdSpecialty" class="form-select">
                                <option value="">-- Seleccione una especialidad --</option>
                                @foreach (var specialty in ViewBag.Specialties)
                                {
                                    <option value="@specialty.IdSpecialty">@specialty.NameSpecialty</option>
                                }
                            </select>
                            <span asp-validation-for="IdSpecialty" class="text-danger small"></span>
                        </div>

                        <!-- Botones de acción -->
                        <div class="d-flex gap-2 justify-content-end">
                            <a asp-action="Index" class="btn btn-lg btn-outline-secondary">
                                <i class="bi bi-x-circle me-1"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-lg btn-primary">
                                <i class="bi bi-check-circle me-1"></i>Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        // Confirmación antes de enviar
        document.getElementById('editConsultoryForm').addEventListener('submit', function(e) {
            const number = document.querySelector('input[name="NumberConsultories"]').value;
            const floor = document.querySelector('select[name="FloorNumber"]').value;

            if (number && floor) {
                if (!confirm(`¿Confirma guardar los cambios del consultorio "${number}" en el piso ${floor}?`)) {
                    e.preventDefault();
                }
            }
        });

        // Convertir número de consultorio a mayúsculas automáticamente
        const numberInput = document.querySelector('input[name="NumberConsultories"]');
        numberInput.addEventListener('input', function(e) {
            e.target.value = e.target.value.toUpperCase();
        });
    </script>
}

@section Styles {
    <style>
        .bg-gradient-primary {
            background: linear-gradient(135deg, #0d6efd 0%, #0dcaf0 100%);
        }

        .rounded-4 {
            border-radius: 1rem !important;
        }

        .rounded-top-4 {
            border-top-left-radius: 1rem !important;
            border-top-right-radius: 1rem !important;
        }

        .form-control:focus,
        .form-select:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
        }

        .form-label {
            color: #495057;
            margin-bottom: 0.5rem;
        }

        .form-control-lg,
        .form-select-lg {
            font-size: 1rem;
        }

        .alert {
            border-radius: 0.75rem;
        }
    </style>
}

